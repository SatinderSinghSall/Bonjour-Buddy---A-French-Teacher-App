<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp"
    tools:context=".MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/logoCard"
        android:layout_marginTop="40dp"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="70dp"
        app:cardElevation="10dp"
        app:strokeWidth="2dp"
        app:strokeColor="?attr/colorOutline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:src="@drawable/app_icon"
            android:contentDescription="@string/app_logo_desc"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/appTitle"
        style="@style/TextAppearance.Material3.HeadlineMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/logoCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/subTitle"
        style="@style/TextAppearance.Material3.BodyMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle"
        android:textAlignment="center"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/subTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Button_Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:text="@string/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="24dp"
            app:cornerRadius="40dp"
            app:icon="@drawable/ic_black_circle"
            app:iconTint="@null"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            app:elevation="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Button_Green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:text="@string/green"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="24dp"
            app:cornerRadius="40dp"
            app:icon="@drawable/ic_green_circle"
            app:iconTint="@null"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:backgroundTint="@color/green"
            android:textColor="@android:color/white"
            app:elevation="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Button_Purple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:text="@string/purple"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="24dp"
            app:cornerRadius="40dp"
            app:icon="@drawable/ic_purple_circle"
            app:iconTint="@null"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:backgroundTint="@color/purple"
            android:textColor="@android:color/white"
            app:elevation="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Button_Red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:text="@string/red"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="24dp"
            app:cornerRadius="40dp"
            app:icon="@drawable/ic_red_circle"
            app:iconTint="@null"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            app:elevation="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Button_Yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:text="@string/yellow"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="24dp"
            app:cornerRadius="40dp"
            app:icon="@drawable/ic_yellow_circle"
            app:iconTint="@null"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:backgroundTint="@color/yellow"
            android:textColor="@android:color/black"
            app:elevation="6dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
